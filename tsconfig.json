{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./src",
    "outDir": "./lib",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/index.ts"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
